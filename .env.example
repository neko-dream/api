ENV=local
PG_DBNAME=kotohiro
PG_USERNAME=kotohiro
PG_HOSTNAME=localhost
PG_PASSWORD=kotohiro
PG_PORT=5432

# Main database connection (for migration and legacy use)
DATABASE_URL=postgres://kotohiro:kotohiro@localhost:5432/kotohiro

# Role-based database connections
# Admin connection for migrations and schema changes
DATABASE_URL_ADMIN=postgres://kotohiro:kotohiro@localhost:5432/kotohiro

# Read-write connection for application servers
# This role has write access to: talk_session_report_histories, representative_opinions, user_group_info
DATABASE_URL_READWRITE=postgres://app_readwrite:your_readwrite_password@localhost:5432/kotohiro

# Read-only connection for analysis servers
# This role has read-only access to all tables
DATABASE_URL_ANALYSIS=postgres://analysis_readonly:your_analysis_password@localhost:5432/kotohiro

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_ISSUER=https://accounts.google.com
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# LINE OAuth
LINE_CHANNEL_ID=your_line_channel_id
LINE_CHANNEL_SECRET=your_line_channel_secret
LINE_CALLBACK_URL=http://localhost:3000/auth/line/callback

# Security
TOKEN_SECRET=your_token_secret
HASH_PEPPER=your_hash_pepper
HASH_ITERATIONS=10

# Server
PORT=3000
DOMAIN=localhost

# AWS/R2 Storage
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_REGION=auto
AWS_S3_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
AWS_S3_BUCKET=your_bucket_name
IMAGE_DOMAIN=https://your_image_domain.com

# Analysis Service
ANALYSIS_USER=your_analysis_user
ANALYSIS_USER_PASSWORD=your_analysis_password
ANALYSIS_API_DOMAIN=http://localhost:8080

# Monitoring
SENTRY_DSN=your_sentry_dsn
BASELIME_API_KEY=your_baselime_api_key

# Encryption
ENCRYPTION_VERSION=v1
ENCRYPTION_SECRET=your_encryption_secret

# Email
RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@your_domain.com

# Application
POLICY_VERSION=1.0.0
APP_NAME=kotohiro
WEBSITE_URL=https://kotohiro.com

# AWS (for Pinpoint)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
PINPOINT_APPLICATION_ID=your_pinpoint_application_id

# OpenTelemetry
OTEL_ENDPOINT=your_otel_endpoint
OTEL_AUTH_HEADER=Authorization
OTEL_AUTH_TOKEN=your_otel_auth_token